<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MapsPage.MainPage">

    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="10">
                <Label Text="Options:"/>
                <Label Text="Name"/>
                <Entry Text="Squatters Police Task Force"
                       x:Name="EntryName"/>

                <Label Text="Latitude"  Margin="0,24,0,0"/>

                <Entry Keyboard="Numeric" Text="14.611868"
                       x:Name="EntryLatitude"/>

                <Label Text="Longitude"/>
                <Entry Keyboard="Numeric" Text="121.054494"
                       x:Name="EntryLongitude"/>

                <Button Text="Open Coordinates" 
                        x:Name="ButtonOpenCoords" 
                        Clicked="ButtonOpenCoords_Clicked"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>

</ContentPage>
